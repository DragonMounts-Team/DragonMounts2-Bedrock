{
	"format_version": "1.10.0",
	"minecraft:client_entity": {
		"description": {			
		"identifier": "dragonmountsplus:ender_dragon",
			"materials": {
				"dragon": "dragon",
				"dragon_default": "dragon_default",
				"wing": "dragon_wings",
				"beam_material": "entity_beam",
				"death_material": "entity_beam_additive",
				"dissolve_0": "entity_dissolve_layer0.skinning",
				"dissolve_1": "entity_dissolve_layer1.skinning"
			},
			"textures": {
			   "f_ender_dragon": "textures/entity/ender_dragon/m_ender_dragon",
				"ender_dragon": "textures/entity/ender_dragon/ender_dragon_redo",
				"r_ender_dragon": "textures/entity/ender_dragon/r_ender_dragon",
				"glow": "textures/entity/ender_dragon/ender_glow_redo",
				"r_glow": "textures/entity/ender_dragon/r_glow",
				"dragon_saddled": "textures/entity/dragon_saddled",
				"dragon_chested": "textures/entity/dragon_chested",
				"dragon_armor_iron": "textures/entity/dragon_armor/armor_iron",
				"dragon_armor_copper": "textures/entity/dragon_armor/armor_copper",
				"dragon_armor_gold": "textures/entity/dragon_armor/armor_gold",
				"dragon_armor_emerald": "textures/entity/dragon_armor/armor_emerald",
				"dragon_armor_diamond": "textures/entity/dragon_armor/armor_diamond",
				"dragon_none": "textures/entity/none",
				"exploding": "textures/entity/dragon_dissolve",
				"beam": "textures/entity/endercrystal/endercrystal_beam"
			},
			"geometry": {
				"dragon_default": "geometry.dm-dragon",							"glow": "geometry.dm-dragon",
				"dragon_saddled": "geometry.dm-dragon",
				"dragon_chested": "geometry.dm-dragon"
			},
			"animations": {
				"idle": "animation.dm-dragon.idle",
				"sit": "animation.dm-dragon.sit",
				"walk": "animation.dm-dragon.walk",
				"hover": "animation.dm-dragon.hover",
				"fly": "animation.dm-dragon.fly",
				"glide": "animation.dm-dragon.glide",
				"breath": "animation.dm-dragon.breath",
				"bite": "animation.dm-dragon.bite",
				"roar": "animation.dm-dragon.roar",
				"roar-pause": "animation.dm-dragon.roar-pause",
				"base_controller": "controller.animation.dm-dragon.base"
//				"mouth_controller": "controller.animation.dm-dragon.mouth"
			},
			"scripts": {
				"animate": [
					"idle",
					"base_controller",
					"mouth_controller",
					{
						"bite": "query.is_delayed_attacking == 1"
					}
				],
				"pre_animation": [
					"variable.death_effect_duration = 200.0;",
					"variable.death_alpha = (1.0 - (query.death_ticks + query.frame_alpha) / variable.death_effect_duration) * 2.0 + 0.3;",
					"variable.script_ride = query.has_rider;",
					"variable.bite_anim_duration = 0.75f;"
				]
			},
			"sound_effects": {
				"dragon_fly_sou": "mob.mountdragon.flap",
				"dragon_step_sou": "mob.mountdragon.step",
				"dragon_subduction": "mob.mountdragon.subduction",
				"attack_eat": "mob.mountdragon.attack.eat",
				"attack_shoot": "mob.mountdragon.shoot",
				"null": "mob.mountdragon.null"
			},
			"particle_effects": {
				"default": "dragonmountsplus:endering_table_particle"
			},
			"render_controllers": [
				"controller.render.dragons.is_saddled",
				{"controller.render.glow1": "query.variant == 1" },
				{"controller.render.glow1": "query.variant == 0" },
			  {"controller.render.glow3": "query.variant == 2" },
				"controller.render.dragons.is_armored",
				"controller.render.dragons.is_chested",
				{ "controller.render.ender_dragon2_death_pre_pass": "query.death_ticks > 1.0" },
				{ "controller.render.ender_dragon2_death_main_pass": "query.death_ticks > 1.0" },
				{ "controller.render.ender_dragon2.default": "query.death_ticks <= 1.0" }
			],
			"spawn_egg": {
				"texture": "ender_dragon_head"
			}
		}
	}
}
