{
	"format_version": "1.10.0",
	"render_controllers": {
		"controller.render.default3_dragon_death_pre_pass": {
			"geometry": "Geometry.dragon_default",
			"materials": [
				{
					"*": "Material.dissolve_0"
				}
			],
			"textures": [
				"Texture.exploding"
			],
			"part_visibility": [
				{
					"*": "query.death_ticks > 1.0"
				}
			],
			"is_hurt_color": {
				"r": "this",
				"g": "this",
				"b": "this",
				"a": "query.death_ticks > 1.0 ? variable.death_alpha : this"
			}
		},
		"controller.render.default3_dragon_death_main_pass": {
			"geometry": "Geometry.dragon_default",
			"materials": [
				{
					"*": "Material.dissolve_1"
				}
			],
			"textures": [
				"Texture.default3_dragon"
			]
		},
		"controller.render.default3_dragon.default": {
			"arrays": {
				"textures": {
					"Array.base": [
  					"Texture.forest_dragon",
						"Texture.taiga_dragon",
						"Texture.dry_dragon"
					],
					"Array.saddled": [
						"Texture.dragon_none",
						"Texture.dragon_saddled"
					],
					"Array.armor": [
						"Texture.dragon_none",
						"Texture.dragon_armor_iron",
						"Texture.dragon_armor_copper",
						"Texture.dragon_armor_gold",
						"Texture.dragon_armor_diamond",
						"Texture.dragon_armor_emerald",
						"Texture.dragon_armor_netherite"
					]
				}
			},
			"part_visibility": [
				{
					"horn_front": "!query.is_saddled"
				}
			],
			"geometry": "Geometry.dragon_default",
			"materials": [
				{
					"*": "Material.dragon_default"
				}
			],
			"textures": [
				"Array.base[query.variant]",
				"Array.saddled[query.is_saddled]",
				"Array.armor[query.mark_variant]"
			]
		}
	}
}
